[user]
	name = Adrian Denkiewicz
	email = adrian.denkiewicz@gmail.com

[core]
	editor = vim
    excludesfile = ~/.gitignore

[color]
    ui = auto

[color]

[alias]
    cp = cherry-pick
    co = checkout
    l = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(bold red)%d%C(reset) %C(white)%s%C(reset) %C(bold white). %an%C(reset)' --abbrev-commit --date=relative
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    d = diff
    last = diff --cached HEAD^

[merge]
	tool = vimdiff
[push]
	default = current
